@page
@model Project_202.Pages.Admin.AwardsModel
@{
    ViewData["title"] = "Awards page";
}
@{
    Layout = "~/Pages/Shared/_Layout_Admin.cshtml";
}
<!DOCTYPE html>
<style>
    .form {
        display: flex;
        flex-direction: column;
        gap: 10px;
        max-width: 350px;
        background-color: #fff;
        padding: 20px;
        border-radius: 20px;
        position: relative;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        margin: auto;
    }

    .container {
        text-align: center;
    }

    .maintitle {
        font-size: 28px;
        color: #34282c;
        font-weight: 700;
        letter-spacing: -1px;
        position: relative;
        align-items: center;
        padding-left: 30px;
    }

    .title {
        font-size: 28px;
        color: #A6179A;
        font-weight: 500;
        letter-spacing: -1px;
        position: relative;
        align-items: center;
        padding-left: 30px;
    }

    .flex {
        display: flex;
        width: 100%;
        gap: 6px;
    }

    .form label {
        position: relative;
    }

        .form label .input {
            width: 100%;
            padding: 10px 10px 20px 10px;
            outline: 0;
            border: 1px solid rgba(105, 105, 105, 0.397);
            border-radius: 10px;
        }

            .form label .input + span {
                position: absolute;
                left: 10px;
                top: 15px;
                color: grey;
                font-size: 0.9em;
                cursor: text;
                transition: 0.3s ease;
            }

            .form label .input:placeholder-shown + span {
                top: 15px;
                font-size: 0.9em;
            }

            .form label .input:focus + span, .form label .input:valid + span {
                top: 30px;
                font-size: 0.7em;
                font-weight: 600;
            }

            .form label .input:valid + span {
                color: green;
            }

    .submit {
        border: none;
        outline: none;
        background-color: royalblue;
        padding: 10px;
        border-radius: 10px;
        color: #fff;
        font-size: 16px;
    }

        .submit:hover {
            background-color: rgb(56, 90, 194);
        }

    .inputbutton {
        background-color: #A6179A;
        text-align: center;
        align-self: center;
        border: 2px;
        border-radius: 12px;
        padding: 5px;
        color: white;
    }

    .returnbutton {
        position: relative;
        background-color: #A6179A;
        text-align: right;
        margin: auto;
        border: 2px;
        border-radius: 12px;
        padding: 5px;
        color: white;
    }

</style>
<html>
<head>
    <title>Awards Page</title>
</head>
<body>
    <h1 class="maintitle">Awarding Page</h1>
    <div class="container">
        <h4 class="title">Enter the award's name and the name of the awarded team</h4><br />
        <form method="post" asp-page-handler="TeamAward" class="form">
            <label class="form-label">Team Award Name</label>
            <input type="text" asp-for="@Model.TeamAwardName" class="input"></input>
            <label class="form-label">Awarded Team</label>
            <input type="text" asp-for="@Model.TeamName" class="input"></input><br />
            <input type="submit" class="inputbutton" />
        </form>
    </div>
    <br />
    <div class="container">
        <h4 class="title">Enter award's name and the name of player to be awarded</h4><br />
        <form method="post" asp-page-handler="PlayerAward" class="form">
            <label class="form-label">Player Award Name</label>
            <input type="text" asp-for="@Model.PlayerAwardName" class="input"></input>
            <label class="form-label">Awarded Player</label>
            <input type="text" asp-for="@Model.PlayerName" class="input"></input><br />
            <input type="submit" class="inputbutton"></input>
        </form>
    </div>
    <br />
    <div class="container">
        <h4 class="title">Enter award's name and the name of coach to be awarded</h4><br />
        <form method="post" asp-page-handler="CoachAward" class="form">
            <label class="form-label">Coach Award Name</label>
            <input type="text" asp-for="@Model.CoachAwardName" class="input"></input>
            <label class="form-label">Awarded Coach</label>
            <input type="text" asp-for="@Model.CoachName" class="input"></input><br />
            <input type="submit" class="inputbutton"></input>
        </form>

        <br><form method="post">
            <button class="returnbutton" asp-page-handler="Return">Return to Admin</button>
        </form>
    </div>
    <br />
</body>
</html>