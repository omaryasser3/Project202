@page
@model Project_202.Pages.Admin.ViewAllModel
@{
    ViewData["Title"] = "View Standings page";
}
@{
    Layout = "~/Pages/Shared/_Layout_Admin.cshtml";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />


    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            color: #007bff;
        }

        table {
            background-color: #fff;
        }

        th, td {
            text-align: center;
        }

        tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .form-inline {
            justify-content: center;
        }

        #searchInput {
            border-radius: 0;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            border-radius: 0;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">Premier League Standings</h2>

        <form method="get" class="form-inline">
            <div class="form-group mx-sm-3 mb-2">
                <label for="searchInput" class="sr-only">Search</label>
                <input type="text" class="form-control" id="searchInput" placeholder="Search Team" name="SearchTerm" value="@Model.SearchTerm">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Search</button>
        </form>

        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Team</th>
                    <th scope="col">Wins</th>
                    <th scope="col">Draws</th>
                    <th scope="col">Losses</th>
                    <th scope="col">MP</th>
                    <th scope="col">GF</th>
                    <th scope="col">GA</th>
                    <th scope="col">GD</th>
                    <th scope="col">Points</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.teamsCount; i++)
                {
                    <tr>
                        <td>
                            <i class="@Model.Teams[i]"></i> 
                        @Model.Teams[i].TeamName
                        </td>
                        <td>@Model.Teams[i].Wins</td>
                        <td>@Model.Teams[i].Draws</td>
                        <td>@Model.Teams[i].Losses</td>
                        <td>@Model.Teams[i].MatchesPlayed</td>
                        <td>@Model.Teams[i].GoalsFor</td>
                        <td>@Model.Teams[i].GoalsAgainst</td>
                        <td>@Model.Teams[i].GoalsDifference</td>
                        <td>@Model.Teams[i].Points</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
