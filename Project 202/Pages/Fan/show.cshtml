@page
@model Project_202.Pages.Fan.showModel
@{
    ViewData["Title"] = "Display All";
}
@{
    Layout = "~/Pages/Shared/_Layout_Fan.cshtml";
}


<style>

    table {
        border: 1px solid;
        width: 100%;
    }

    th {
        border: 1px solid;
        background-color: royalblue;
        color: white
    }

    td {
        border: 1px solid;
    }

    .returnbutton {
        position: relative;
        background-color: royalblue;
        text-align: right;
        margin: auto;
        border: 2px;
        border-radius: 12px;
        padding: 5px;
        color: white;
    }

</style>

<!DOCTYPE html>
<table>
    <thead>
    <th>Team</th>
    <th>Names</th>
    <th>Nationality</th>
    </thead>
    <tbody>
    @{
        for (int i = 0; i < @Model.usercount; i++)
        {
            <tr>
                <td>@Model.teamname[i]</td>
                <td>@Model.name[i]</td>
                <td>@Model.nationality[i]</td>
            </tr>
        }
    }
    </tbody>
</table>
<br/>